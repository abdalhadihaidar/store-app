{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,   // ✅ Add this to support .json imports
    "skipLibCheck": true         // ✅ Helps avoid type mismatches in node_modules
  }
}
